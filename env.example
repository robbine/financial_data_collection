# Financial Data Collector Environment Variables
# Copy this file to .env and update the values

# Application settings
APP_NAME=Financial Data Collector
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database configuration
DATABASE_URL=postgresql://fdc_user:fdc_password@localhost:5432/fdc_db
POSTGRES_DB=fdc_db
POSTGRES_USER=fdc_user
POSTGRES_PASSWORD=fdc_password

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_password

# MongoDB configuration
MONGO_URL=mongodb://localhost:27017/fdc_docs
MONGO_USER=admin
MONGO_PASSWORD=admin_password

# Elasticsearch configuration
ELASTICSEARCH_URL=http://localhost:9200

# API Keys
# User ID mapping for permission compatibility
USER_ID=1000
GROUP_ID=1000

API_KEY=your_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
QUANDL_API_KEY=your_quandl_api_key
OPENAI_API_KEY=your_openai_api_key_here

# Volcano Engine API (for LLM extraction)
VOLC_API_KEY=your_volc_api_key_here
VOLC_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
VOLC_MODEL=ep-20250725215501-7zrfm

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# External services
YAHOO_FINANCE_BASE_URL=https://query1.finance.yahoo.com
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
QUANDL_BASE_URL=https://www.quandl.com/api/v3

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Slack configuration (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# File storage
STORAGE_PATH=./data
LOG_PATH=./logs
CACHE_PATH=./cache

# Performance settings
MAX_WORKERS=10
MAX_MEMORY_USAGE=2GB
CONNECTION_POOL_SIZE=20

# Development settings (only for development)
DEV_MODE=false
HOT_RELOAD=false
MOCK_EXTERNAL_APIS=false

# ClickHouse configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=financial_data
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_SECURE=false
CLICKHOUSE_VERIFY=false
CLICKHOUSE_MAX_CONNECTIONS=10
CLICKHOUSE_CONNECTION_TIMEOUT=10
CLICKHOUSE_QUERY_TIMEOUT=30
CLICKHOUSE_COMPRESSION=true
CLICKHOUSE_BATCH_SIZE=1000
CLICKHOUSE_FLUSH_INTERVAL=5

