<?xml version="1.0"?>
<yandex>
    <users_config>users.xml</users_config>
    <path>/var/lib/clickhouse/</path>
    <!-- ClickHouse Server Configuration for Financial Data Collector -->
    
    <!-- Network settings -->
    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <mysql_port>9004</mysql_port>
    <postgresql_port>9005</postgresql_port>
    <interserver_http_port>9009</interserver_http_port>
    
    <!-- Data and log paths -->
    <tmp_path>/var/lib/clickhouse/tmp/</tmp_path>
    <user_files_path>/var/lib/clickhouse/user_files/</user_files_path>
    <format_schema_path>/var/lib/clickhouse/format_schemas/</format_schema_path>
    
    <!-- Logging -->
    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>10</count>
    </logger>
    
    <!-- HTTP server settings -->
    <http_server_default_response><![CDATA[<html ng-app="SMI2"><head><base href="http://ui.tabix.io/"></head><body><div ui-view="" class="content-ui"></div><script src="http://loader.tabix.io/master.js"></script></body></html>]]></http_server_default_response>
    
    <!-- Memory settings optimized for financial data -->
    


    
    <!-- Query settings -->
    <!-- Connection settings -->
    <max_connections>4096</max_connections>
    <max_concurrent_queries>100</max_concurrent_queries>
    <uncompressed_cache_size>8589934592</uncompressed_cache_size> <!-- 8GB -->
    
    <!-- Mark cache for better performance -->
    <mark_cache_size>5368709120</mark_cache_size> <!-- 5GB -->
    
    <!-- Thread pool settings -->



    
    <!-- Merge tree settings -->
    <merge_tree>
        <max_suspicious_broken_parts>5</max_suspicious_broken_parts>
        <parts_to_delay_insert>150</parts_to_delay_insert>
        <parts_to_throw_insert>300</parts_to_throw_insert>
        <max_delay_to_insert>1</max_delay_to_insert>
        <max_parts_in_total>100000</max_parts_in_total>

        <max_bytes_to_merge_at_min_space_in_pool>1048576000</max_bytes_to_merge_at_min_space_in_pool> <!-- 1GB -->
        <min_bytes_for_wide_part>10485760</min_bytes_for_wide_part> <!-- 10MB -->
        <min_rows_for_wide_part>8192</min_rows_for_wide_part>
        <ttl_only_drop_parts>false</ttl_only_drop_parts>
        <merge_with_ttl_timeout>14400</merge_with_ttl_timeout>
        <merge_selecting_sleep_ms>5000</merge_selecting_sleep_ms>
        <number_of_free_entries_in_pool_to_lower_max_size_of_merge>8</number_of_free_entries_in_pool_to_lower_max_size_of_merge>

    </merge_tree>

    <!-- Storage configuration：已删除冲突的default磁盘配置，default磁盘路径引用顶层<path> -->
    <storage_configuration>
        <disks>
            <!-- 此处保留空disks节点，避免删除后结构异常，default磁盘自动关联顶层<path> -->
        </disks>
        <policies>
            <default>
                <volumes>
                    <default>
                        <disk>default</disk> <!-- 正常引用default磁盘，路径由顶层<path>决定 -->
                    </default>
                </volumes>
            </default>
        </policies>
    </storage_configuration>

    <!-- Compression settings -->
    <compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </compression>
    
    <!-- Remote servers (for clustering if needed) -->
    <remote_servers>
        <financial_cluster>
            <shard>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </financial_cluster>
    </remote_servers>
    
    <!-- ZooKeeper settings (disabled - not using replicated tables) -->
    <!-- <zookeeper>
        <node>
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper> -->

    <!-- Macros for replicated tables (disabled) -->
    <!-- <macros>
        <cluster>financial_cluster</cluster>
        <shard>01</shard>
        <replica>replica-01</replica>
    </macros> -->
    
    <!-- Built-in dictionaries -->
    <dictionaries_config>*_dictionary.xml</dictionaries_config>
    
    <!-- Query log settings -->
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>
    
    <!-- Query thread log -->
    <query_thread_log>
        <database>system</database>
        <table>query_thread_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_thread_log>
    
    <!-- Part log -->
    <part_log>
        <database>system</database>
        <table>part_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </part_log>
    
    <!-- Trace log -->
    <trace_log>
        <database>system</database>
        <table>trace_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </trace_log>
    
    <!-- Metric log -->
    <metric_log>
        <database>system</database>
        <table>metric_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
        <collect_interval_milliseconds>1000</collect_interval_milliseconds>
    </metric_log>
    
    <!-- Asynchronous metric log -->
    <asynchronous_metric_log>
        <database>system</database>
        <table>asynchronous_metric_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
        <collect_interval_milliseconds>1000</collect_interval_milliseconds>
    </asynchronous_metric_log>
    
    <!-- Session log -->
    <session_log>
        <database>system</database>
        <table>session_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </session_log>
    
    <!-- Text log -->
    <text_log>
        <database>system</database>
        <table>text_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </text_log>
    
    <!-- Transaction log -->
    <transaction_log>
        <database>system</database>
        <table>transaction_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </transaction_log>
    
    <!-- System settings -->

    <max_table_size_to_drop>0</max_table_size_to_drop>
    <max_partition_size_to_drop>0</max_partition_size_to_drop>
    
    <!-- Timezone -->
    <timezone>UTC</timezone>
    
    <!-- Security settings -->
    <allow_experimental_data_skipping_indices>1</allow_experimental_data_skipping_indices>
    <allow_experimental_cross_to_join_conversion>1</allow_experimental_cross_to_join_conversion>
    
    <!-- Performance settings -->
    <max_thread_pool_size>10000</max_thread_pool_size>
    <max_thread_pool_free_size>1000</max_thread_pool_free_size>
    <thread_pool_queue_size>10000</thread_pool_queue_size>
    
    <!-- Cache settings -->
    <mmap_cache_size>1000</mmap_cache_size>
    <compiled_expression_cache_size>134217728</compiled_expression_cache_size> <!-- 128MB -->
    <compiled_expression_cache_elements_size>10000</compiled_expression_cache_elements_size>
    
    <!-- Network settings -->
    <tcp_nodelay>true</tcp_nodelay>
    <listen_backlog>4096</listen_backlog>
    
    <!-- HTTP settings -->


    <http_max_request_size>104857600</http_max_request_size> <!-- 100MB -->
    
    <!-- Profiling -->


    
    <!-- Development settings -->
    
    
    
    
</yandex>

